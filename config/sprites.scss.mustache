{{ #items }}
@mixin sprite-{{ name }} {
  // Note: This file is automatically generated
  //       according to config/sprites.scss.mustache.
  //       (This comment is included here rather than
  //        at the top of the file because otherwise
  //        it gets clobbered by spritesmith.)

  $total-width: {{ px.total_width }} / 2;
  $total-height: {{ px.total_height }} / 2;
  $sprite-{{ name }}-width: {{ px.width }} / 2;
  $sprite-{{ name }}-height: {{ px.height }} / 2;
  $sprite-{{ name }}-offset-x: {{ px.offset_x }} / 2;
  $sprite-{{ name }}-offset-y: {{ px.offset_y }} / 2;
  display: inline-block;
  width: $sprite-{{ name }}-width;
  height: $sprite-{{ name }}-height;
  background-image: url('/sprites.png');
  background-position: $sprite-{{ name }}-offset-x $sprite-{{ name }}-offset-y;
  background-size: $total-width $total-height;
}

.sprite-{{ name }} {
  @include sprite-{{ name }};
}

{{ /items }}
